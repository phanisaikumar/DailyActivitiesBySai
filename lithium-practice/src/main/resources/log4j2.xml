<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="basePath">/Users/saikumarn/eclipse-workspace/lithium-practice/logs</Property>
		<Property name="fileName">Hibernate_practice</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile name="RollingFile" fileName="${basePath}/${fileName}.log"
			filePattern="${basePath}/${fileName}.log.%d{yyyy-MM-dd}">
			<PatternLayout>
				<pattern>"%d %p %c{1.} [%t] %m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>

			<DefaultRolloverStrategy max="5">
				<Delete basePath="${basePath}" maxDepth="1">
					<IfAll>
						<!-- Looks for file names starting with testing*.log*. Any file including 
							testing-date.1 will satisfy this condition. Could delete current log TZAlphaUtils.log -->
						<IfFileName glob="Hibernate_practice.log*" />
						<IfAccumulatedFileCount exceeds="90" />
					</IfAll>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>